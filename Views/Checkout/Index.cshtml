@model IEnumerable<MyShop.ViewModels.CartViewModel>


@if (Model.Count() == 0)
{
    <h2>Prekių krepšelis tuščias</h2>
}
else
{
    @foreach (var item in Model)
    {
        <form asp-action="RemoveItem" asp-route-id="@item.ItemName">
            <div class="row">
                <div class="col">
                    @item.ItemName
                </div>
                <div class="col">
                    @item.ItemCount
                </div>
                <div class="col">
                    @string.Format("{0:0.00}", item.ItemPrice)
                </div>
                <div class="col">
                    <input href="#" value="Pašalinti prekę" type="submit">
                </div>
            </div>
        </form>

    }
    <p>Iš viso: @string.Format("{0:0.00}", ViewBag.Total)</p>
}
