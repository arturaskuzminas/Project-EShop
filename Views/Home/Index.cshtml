                    <h6 class="text-danger"><strong>Naujiena !</strong></h6>
                    <h5 class="card-title">Laikrodis "@item.Title"</h5>
                    <a asp-area="Identity" asp-page="/UserProduct" class="btn btn-outline-dark align-content-center">Į krepšelį</a>
                </div>
            </div>
        }
    }
</div>
